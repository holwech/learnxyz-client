{
  //"parser": "babel-eslint",
  "extends": [
    // add more generic rulesets here, such as:
    "plugin:vue/recommended",
    "plugin:vue/essential",
    //"@vue/prettier",
    "@vue/typescript"
  ],
  "rules": {
    "semi": ["warn", "always"],
    "quotes": ["warn", "single"],
    "no-console": "off"
  },
  "root": true,
  "env": {
    "node": true
  },
  "parserOptions": {
    "parser": "@typescript-eslint/parser"
  },
  "overrides": [
    {
      "files": ["**/__tests__/*.{j,t}s?(x)"],
      "env": {
        "jest": true
      }
    }
  ]
}
